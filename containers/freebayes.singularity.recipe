Bootstrap: docker
From: debian:jessie-slim


%post
    apt update \
    && apt install -y --no-install-recommends \
    build-essential \
    ca-certificates \
    git \
    zlib1g-dev \
    libbz2-dev \
    && rm -rf /var/lib/apt/lists/*
    cd /opt
    git clone --recursive https://github.com/ekg/freebayes.git \
    && cd freebayes \
    && make \
    && make install

%test
    freebayes --help

